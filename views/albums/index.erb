<h1>Albums</h1>

<% for album in @albums %>
  <p>Album Title: <%= album.title %></p>
  <p>Artist Name:  <%= album.artist_name %></p>
  <p>Quanity: <%= album.quantity %></p>

  <form method="get" action="/albums/<%= album.id %>">
    <input type="submit" value="View Album"/>
  </form>

  <form method="get" action="/albums/<%= album.id %>/edit">
    <input type="submit" value="Edit Album"/>
  </form>

  <form method="post" action="/albums/<%= album.id %>/delete">
    <input type="submit" value="Delete Album"/>
  </form>
  <%end%>
