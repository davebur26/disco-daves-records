
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
  <div class="title-add-container">
    <h1>Albums</h1>

    <a href="/album/new" class="new-link">Add New Album</a>
  </div>

  <table class="h-table album-table">
    <th class="column1">Album Title</th>
    <th class="column1"> Artist Name</th>
    <th>Quantity</th>
    <th>Stock Level</th>
    <th>Last Bought</th>
    <th>View</th>
    <th>Edit</th>
    <th>Delete</th>

    <% for album in @albums %>
      <tr>
        <td class="column1"><%= album.title %></td>
        <td class="column1"><%= album.artist_name %></td>
        <td><%= album.quantity %></td>
        <td><%= album.stock_level %></td>
        <td><%= album.last_bought %></td>
        <td>
          <form method="get" action="/albums/<%= album.id %>">
          <input type="submit" value="" class="small-button view-button"/>
        </form>
        </td>
        <td>
          <form method="get" action="/albums/<%= album.id %>/edit">
          <input type="submit" value="" class="small-button edit-button"/>
         </form>
        </td>
         <td>
          <form method="post" action="/albums/<%= album.id %>/delete">
          <input type="submit" value="" class="small-button delete-button"/>
          </form>
        </td>
      </tr>
    <%end%>
  </table>
</body>
