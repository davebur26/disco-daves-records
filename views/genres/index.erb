<h1>Genre</h1>

<table class="genre-table">
    <th class="column1">Genre Name</th>
    <th>View Genre</th>


<% for genre in @genres %>
<tr>

  <td class="column1"><%= genre.name %></td>
  <td><form method="get" action="/genres/<%= genre.id %>">
    <input type="submit" value="View Genre"/>
  </form></td>

</tr>


  <%end%>
